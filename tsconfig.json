{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES3",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "module": "CommonJS",
    // when migration complete, turn false
    "allowJs": true,
    // one day we should comply with these
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true
  },
  "lib": ["es2015"],
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
